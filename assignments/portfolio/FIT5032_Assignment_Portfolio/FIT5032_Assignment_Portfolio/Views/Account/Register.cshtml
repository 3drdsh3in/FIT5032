@using FIT5032_Assignment_Portfolio.Models
@model FIT5032_Assignment_Portfolio.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="register-photo">
    <div class="form-container">
        <div class="user-image-holder"></div>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <h2 class="text-center"><strong>Create</strong> an account.</h2>

            @Html.ValidationSummary("", new { @class = "text-danger" })
            <hr />
            <div class="form-group">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @type = "username", @name = "username", @placeholder = "UserName" } })
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "email", @name = "email", @placeholder = "Email" } })
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password", @name = "password", @placeholder = "Password" } })
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @type = "password", @name = "password", @placeholder = "Password (repeat)" } })
            </div>

            <label class="form-check-label">Account Type:</label>
            <div class="form-group">
                @Html.DropDownListFor(model => model.Type,new SelectList(Enum.GetValues(typeof(UserType))),new { @class = "form-control form-select-lg mb-3", @aria_label = "form-select-lg example" })
            </div>

            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit" value="Register">Register</button>
            </div>
            <a href="#" class="already">You already have an account? Login here.</a>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
