@using FIT5032_Assignment_Portfolio.Models
@model FIT5032_Assignment_Portfolio.Models.UpdateUserDetailsModel

@{
    ViewBag.Title = "UpdateUserDetails";
}

<div class="register-photo">
    <div class="form-container">
        @using (Html.BeginForm("Update", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <h2 class="text-center"><strong>Update</strong> User Details.</h2>

            @Html.ValidationSummary("", new { @class = "text-danger" })
            <hr />
            <div class="form-group">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @type = "username", @name = "username", @placeholder = "UserName" } })
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.PreferredNameTitle, new { htmlAttributes = new { @class = "form-control", @type = "preferrednametitle", @name = "preferrednametitle", @placeholder = "PreferredNameTitle" } })
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "email", @name = "email", @placeholder = "Email" } })
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password", @name = "password", @placeholder = "Password" } })
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @type = "password", @name = "password", @placeholder = "Password (repeat)" } })
            </div>

            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit" value="Update">Update</button>
            </div>
            <a href="#" class="already">You already have an account? Login here.</a>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
